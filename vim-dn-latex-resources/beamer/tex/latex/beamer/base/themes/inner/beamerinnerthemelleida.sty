\mode<presentation>

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded]
\setbeamertemplate{title page}[default][colsep=-4bp,rounded=true]
\setbeamertemplate{part page}[default][colsep=-4bp,rounded=true]

% Items

\setbeamertemplate{itemize item}{\scriptsize\hbox{*}}
\setbeamertemplate{itemize subitem}{\tiny\hbox{**}}
\setbeamertemplate{itemize subsubitem}{\tiny\hbox{***}}

% Enumerate items

\setbeamertemplate{enumerate item}{\scriptsize\insertenumlabel.}
\setbeamertemplate{enumerate subitem}{\tiny\insertenumlabel.\insertsubenumlabel}
\setbeamertemplate{enumerate subsubitem}{\tiny\insertenumlabel.\insertsubenumlabel.\insertsubsubenumlabel}

\mode<all>
